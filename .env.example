# Pantone Vision 2.0 - Environment Configuration Template
# Copy this to .env.production and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
# Project URL format: https://[project-id].supabase.co
SUPABASE_URL=https://your-project-id.supabase.co
# Anonymous key - safe to expose in frontend (starts with eyJ...)
SUPABASE_ANON_KEY=your-anon-key-here
# Service role key - NEVER expose in frontend, server-side only (starts with eyJ...)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# AI API KEYS (Required)
# ===========================================

# Google Gemini API Key (Free: 15 requests/minute)
# Get from: https://console.cloud.google.com/apis/credentials
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Key (Pay-per-use)
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# HuggingFace API Key (Free: 30,000 chars/month)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Replicate API Key (for Stable Diffusion texture generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=your_replicate_api_key_here

# Stability AI API Key (for texture generation)
# Get from: https://platform.stability.ai/account/keys
STABILITY_API_KEY=your_stability_api_key_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_ENV=production
DEBUG=false
APP_NAME=Pantone Vision 2.0
APP_VERSION=2.0.0

# CORS Origins (comma-separated for multiple domains)
ALLOWED_ORIGINS=https://your-vercel-domain.vercel.app

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_REQUEST=2

# ===========================================
# RATE LIMITING & PERFORMANCE
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=10

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=INFO
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Sentry DSN (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# DEVELOPMENT OVERRIDES (Local Only)
# ===========================================
# Uncomment these for local development
# APP_ENV=development  
# DEBUG=true
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
ENABLE_PANTONE_IDENTIFICATION=true
ENABLE_TEXTURE_TRANSFER=true
ENABLE_BATCH_PROCESSING=false
ENABLE_USER_AUTHENTICATION=false

# ===========================================
# EXTERNAL SERVICE URLS (Optional)
# ===========================================
# Custom endpoints for external services
# PANTONE_API_BASE_URL=https://api.pantone.com/v1
# GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ===========================================
# SECURITY SETTINGS (Production)
# ===========================================
# Session secret for JWT tokens (generate random string)
SESSION_SECRET=your-super-secret-jwt-signing-key-min-32-chars

# API Key encryption key (generate random 32-character string)  
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS & Security Headers
ENABLE_CORS=true
CORS_MAX_AGE=86400
ENABLE_CSRF_PROTECTION=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Vercel-specific settings
VERCEL_REGION=iad1
VERCEL_FUNCTION_MEMORY=1024
VERCEL_FUNCTION_TIMEOUT=30

# GitHub integration (for CI/CD)
GITHUB_REPO=your-username/pantone-vision-production
GITHUB_BRANCH=main