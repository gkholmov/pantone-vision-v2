{
  "version": 2,
  "name": "pantone-vision-v2",
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "250mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/pantone",
      "dest": "/api/pantone"
    },
    {
      "src": "/api/texture",
      "dest": "/api/texture"
    },
    {
      "src": "/api/gemini",
      "dest": "/api/gemini"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "maxDuration": 10,
      "memory": 512
    },
    "api/health.py": {
      "runtime": "python3.12",
      "maxDuration": 10,
      "memory": 512
    },
    "api/pantone.py": {
      "runtime": "python3.12", 
      "maxDuration": 60,
      "memory": 1024
    },
    "api/texture.py": {
      "runtime": "python3.12",
      "maxDuration": 300,
      "memory": 3008
    },
    "api/gemini.py": {
      "runtime": "python3.12",
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "env": {
    "PYTHONPATH": "/var/task:/var/task/api",
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "framework": null,
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": null,
  "devCommand": null,
  "outputDirectory": null,
  "cleanUrls": true,
  "trailingSlash": false
}